<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Project</title>
    <link rel="stylesheet" href="/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
    <% if (message) { %>
        <script>
            alert("<%= message %>");
        </script>
    <% } %>
    <nav>
        <%- include('../includes/navbar.ejs', { user: user }) %>
    </nav>
    <div class="container mt-4">
        <h1>Create Project</h1>
        <form action="/project/create" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Project Title</label>
                <input type="text" id="title" name="title" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Project Description</label>
                <textarea id="description" name="description" class="form-control" required></textarea>
            </div>
            <div class="mb-3">
                <label for="publicWallName" class="form-label">Public Wall Name</label>
                <input type="text" id="publicWallName" name="publicWallName" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="privateWallName" class="form-label">Private Wall Name</label>
                <input type="text" id="privateWallName" name="privateWallName" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Create Project</button>
        </form>
    </div>
</body>
</html>
